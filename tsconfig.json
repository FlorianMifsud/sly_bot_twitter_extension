{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "allowJs": true,
    "lib": ["es2022"],
    "include": ["./src/**/*.ts"],
    "exclude": ["./test/**/*.test.ts"]
}
